.hme-search-results{
  position: relative;
  margin: 0px;
  padding: 0px;
  width: 700px;

  table{
    border-radius: 5px; 
    background-color: white;

  }
  thead > tr > td{
    font-weight: 700;
    border-bottom: #AAA 1px solid;
  }
  thead > tr, tbody{
    display:block;
  }
  tbody{
    overflow: auto;
  }
  tbody > tr:first-child > td{
    border-top: none;
  }

  .first-column{
    width: 170px;
    padding-left: 10px;
  }
  .second-column{
    width: 400px;
  }
  .third-column{
    width: 100px;
  }
  .fourth-column{
    width: 80px;
  }

  .info-text{
    color: #888;
  }
  .title-text{
    color: #222;
  }
  .description-text{
    color: #444;
    line-height: 1.5;
  }
  .clickable{
    cursor: pointer;
  }
  .badge{
    float: right;
    margin: 0 4px 0 4px;
  }
  .route-btn{
    height: 20px;
  }
  .tag {
    position: relative;
    float   : right;
    margin  : 0 4px;
    height  : 17px; 
    opacity : 0.5;
  }
}